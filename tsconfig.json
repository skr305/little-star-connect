{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "./lib",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowJs": true,
    
  },
  "include": [ "./src/**/*" ],
  "exclude": ["node_modules"]
}